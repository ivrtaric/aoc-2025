{
  "compilerOptions": {
    "baseUrl": "./",
    "declaration": true,
    "experimentalDecorators": true,
    "inlineSources": true,
    "lib": ["ESNext"],
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "dist",
    "paths": {
      "src/*": ["./src/*"],
      "test/*": ["./test/*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2022"
  },
  "include": ["src/**/*.ts", "test/**/*.ts"],
  "exclude": ["node_modules"]
}
